{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "quotemark": [true, "single"],
        "only-arrow-functions": false,
        "array-type": false,
        "object-literal-sort-keys": false,
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-leading-underscore",
                "allow-pascal-case"
            ]
        },
        "interface-name": false
    },
    "jsRules": {
        "quotemark": [true, "single"],
        "only-arrow-functions": false,
        "array-type": false,
        "object-literal-sort-keys": false,
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-leading-underscore",
                "allow-pascal-case"
            ]
        }
    },
    "rulesDirectory": []
}
